@model IEnumerable<VnSport.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Loại Sản Phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Loại Sản phẩm
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.loaiSanPham1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.gioiThieu)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.loaiSanPham1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gioiThieu)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.maLoai }) |
                        @Html.ActionLink("Details", "Details", new { id = item.maLoai }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.maLoai })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

