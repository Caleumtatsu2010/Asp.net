@model IEnumerable<VnSport.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tài Khoản</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Tài khoản
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tenDangNhap)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.matKhau)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.loai)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tenDangNhap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.matKhau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.loai)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.tenDangNhap }) |
                        @Html.ActionLink("Details", "Details", new { id = item.tenDangNhap }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.tenDangNhap })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

