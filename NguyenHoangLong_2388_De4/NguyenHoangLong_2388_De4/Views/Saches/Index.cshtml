@model IEnumerable<NguyenHoangLong_2388_De4.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Cuốn Sách</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Tìm sách theo tác giả: @Html.TextBox("searchString", ViewBag.currentFilter as string)
        <input type="submit" value="Tìm" />
    </p>
}

    <table class="table">
        <tr>
            <th>
                Tên Sách
                @*@Html.DisplayNameFor(model => model.Tensach)*@
            </th>
            <th>
                Tác Giả
                @*@Html.DisplayNameFor(model => model.Tacgia)*@
            </th>
            <th>
                Giá
                @*@Html.DisplayNameFor(model => model.Gia)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tensach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tacgia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Masach.Trim() }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Masach.Trim() }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Masach.Trim() })
                </td>
            </tr>
        }
        @Html.ActionLink("Trở về", "Index")

    </table>
